<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="av"
        x:Class="StatisticsCalculator.MainWindow"
        Title="Variational series"
        MinHeight="438" Height="438" MaxHeight="438"
        MinWidth="441" Width="441" MaxWidth="441"
>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="335*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="321*"/>
        </Grid.ColumnDefinitions>
        <Grid 
            Grid.Column="1" 
            Margin="0,32,0,0" 
            Grid.RowSpan="2" Grid.Row="1"
        />
        <ListBox
            x:Name="ResultLst" 
            Grid.Column="1" 
            Margin="0,32,0,1"
            Grid.RowSpan="2" Grid.Row="1"
        />
        <Label 
            Content="Варианта" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            RenderTransformOrigin="-0.049,-0.195"
            Width="90"
            Height="27"
        />
        <Label 
            Content="Частота" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center"
            RenderTransformOrigin="-0.049,-0.195"  
            Width="90"
            Height="27" Grid.Row="1"
          
        />
        <TextBox
            x:Name="VariantsInput" 
            ToolTip= "Введите значения вариант через пробел"
            TextChanged="Text_TextChanged" 
            HorizontalAlignment="Center"    
            VerticalAlignment="Center"
            TextWrapping="Wrap" 
            Grid.Column="1" 
            Width="301" 
            Height="20" 
            
        />
        <TextBox 
            x:Name="FrequenciesInput" 
            ToolTip= "Введите значения частот через пробел" 
            TextChanged="Text_TextChanged"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" 
            TextWrapping="Wrap"
            Grid.Column="1" 
            Width="301"           
            Height="20" Grid.Row="1"
        />
        <Button 
            x:Name="BtnStart" 
            Content="Начать" 
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="CalculateButton_Click"
            Margin="0,268,0,0" 
            Grid.Row="2" 
            Width="80"
            Height="20"
        />
        <Button 
            x:Name="BtnClear" 
            Content="Очистить" 
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="BtnClear_Click"
            Margin="0,293,0,0" 
            Grid.Row="2" 
            Width="80"
            Height="20"
        />
    </Grid>
</Window>